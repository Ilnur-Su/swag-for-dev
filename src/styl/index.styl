@require "imports/base"

a
	color link-color
	transition .2s
	text-decoration none
	&:hover
		color link-hover-color

.btn.secondary
	color white-color
	font-size 1.8rem
	padding .4rem 1rem
	margin-left 1rem
	border-radius .6rem
	border 2px solid link-color
	display inline-block
	&:hover
		background link-color
		color white-color

.github
	display flex
	background tertiary-color
	color white-color
	border none
	font-size 1.8rem
	padding .8rem 1rem
	margin-left 1rem
	border-radius .6rem
	&:hover
		background darken(tertiary-color, 20%)
		color white-color
	.github-logo
		justify-self star
		width 20px
		height 20px
		margin-right .8rem

.reset-btn
	background #e74c3c
	color white-color
	border none
	font-size 1.6rem
	padding .6rem 1.2rem
	border-radius .6rem
	cursor pointer
	transition .2s
	&:hover
		background darken(#e74c3c, 20%)
		color white-color
	&.resetting
		background #c0392b

.container
	min-height 100vh
	width 100vw
	overflow-x hidden

.hidden
	display none

.box
	width 100%

section.main
	flex-direction column
	margin 0 auto

	.controls
		flex-direction column
		background linear-gradient(135deg, white-color 0%, #f8fafc 100%)
		padding 3rem
		border-radius 20px
		border 1px solid rgba(secondary-color, 0.1)
		box-shadow 0 10px 40px rgba(primary-color, 0.1), 0 1px 3px rgba(0, 0, 0, 0.05)
		margin 4rem 2rem 0
		position relative
		overflow hidden
		
		&::before
			content ''
			position absolute
			top 0
			left 0
			right 0
			height 4px
			background linear-gradient(90deg, secondary-color, tertiary-color, link-color)
		
		.controls-header
			text-align center
			margin-bottom 2rem
			
			.controls-icon
				width 3rem
				height 3rem
				color secondary-color
		
		.controls-grid
			display flex
			flex-wrap wrap
			gap 2rem
			margin-bottom 3rem
			align-items flex-end
			
			.control-group
				flex 1
				min-width 200px
				display flex
				flex-direction column
				gap 0.8rem
				
				.control-label
					display flex
					align-items center
					gap 0.8rem
					font-size 1.4rem
					font-weight 600
					color primary-color
					margin 0
					
					.control-icon
						width 1.6rem
						height 1.6rem
						color secondary-color
				
				.select-wrapper
					position relative
					
					&::after
						position absolute
						top 50%
						right 1.2rem
						width 0
						height 0
						content ''
						transform translateY(-50%)
						border-width 6px 6px 0
						border-style solid
						border-color secondary-color transparent transparen
						pointer-events none
						transition transform 0.2s ease
					
					&:hover::after
						transform translateY(-50%) scale(1.1)
					
					.control-selec
						width 100%
						border 2px solid rgba(secondary-color, 0.2)
						border-radius 12px
						padding 1.2rem 1.6rem
						appearance none
						font-family $default-font-family
						font-size 1.5rem
						cursor pointer
						background white-color
						color primary-color
						transition all 0.2s ease
						
						&:hover
							border-color secondary-color
							box-shadow 0 4px 12px rgba(secondary-color, 0.15)
						
						&:focus
							outline none
							border-color secondary-color
							box-shadow 0 0 0 3px rgba(secondary-color, 0.1)
						
						option
							padding 0.8rem
							font-size 1.4rem
		
		.controls-options
			display flex
			flex-wrap wrap
			gap 2rem
			margin-bottom 3rem
			padding 2rem
			background rgba(secondary-color, 0.05)
			border-radius 12px
			
			.option-group
				.option-label
					display flex
					align-items center
					gap 1rem
					cursor pointer
					padding 0.8rem
					border-radius 8px
					transition background-color 0.2s ease
					
					&:hover
						background rgba(secondary-color, 0.1)
					
					.option-checkbox
						width 1.8rem
						height 1.8rem
						margin 0
						accent-color secondary-color
						cursor pointer
					
					.option-tex
						display flex
						align-items center
						gap 0.8rem
						font-size 1.5rem
						font-weight 500
						color primary-color
						
						.option-icon
							width 1.6rem
							height 1.6rem
							color secondary-color
		
		.controls-actions
			display flex
			justify-content center
			
			.reset-btn
				display flex
				align-items center
				gap 1rem
				background linear-gradient(135deg, #e74c3c 0%, #c0392b 100%)
				color white-color
				border none
				font-size 1.6rem
				font-weight 600
				padding 1.2rem 2.4rem
				border-radius 12px
				cursor pointer
				transition all 0.2s ease
				box-shadow 0 4px 12px rgba(231, 76, 60, 0.3)
				
				&:hover
					transform translateY(-2px)
					box-shadow 0 6px 20px rgba(231, 76, 60, 0.4)
				
				&:active
					transform translateY(0)
				
				&.resetting
					background linear-gradient(135deg, #c0392b 0%, #a93226 100%)
				
				.reset-icon
					width 1.8rem
					height 1.8rem

	.banner
		text-align center
		padding 1.2rem
		background primary-color
		color white

	.hero
		background url('/assets/img/tiny-grid.svg') repea
		background-size 120px

		.heading
			flex-direction column
			max-width 90rem
			text-align center
			padding 6rem

			.logo
				img
					max-width 240px
					width 100%
					height 70px
			.alt-logo
				visibility hidden
				display block
				font-size 1.2rem
			h2
				font-size 2.4rem
				font-family $default-font-family-mono
				color white-color
				padding .4rem .8rem
				border 2px dashed white-color
				border-radius 6px
				margin-bottom 2rem
			p
				font-size 2.2rem
				font-weight bold
				line-height 1.4
				max-width 72rem
				color white-color

	.buttons
		justify-content flex-star
		max-width 1140px
		width 100%
		flex-direction column
		align-items flex-star

	.conten
		max-width 1140px
		flex-wrap wrap
		align-items flex-star
		justify-content space-around
		margin 0 -10px
		padding 20px
		width 100%

		@import "imports/card"

	.no-results
		text-align center
		padding 3rem
		margin 1em

		h3
			margin 1em 0

section.newsletter
	background white-color
	border-top 1px solid grey-color

footer
