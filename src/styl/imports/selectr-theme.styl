.selectr-container
	user-select none
	width 100%

.selectr-placeholder
	font-family $default-font-family
	font-size 1.5rem
	color rgba(primary-color, 0.6)
	font-weight 500

.selectr-options
	overflow-y auto
	max-height 200px
	border-radius 8px
	box-shadow 0 8px 25px rgba(primary-color, 0.15)
	border 1px solid rgba(secondary-color, 0.1)

.selectr-options-container
	border-radius 8px
	background white-color

.selectr-option
	padding 1rem 1.2rem
	font-size 1.4rem
	cursor pointer
	transition background-color 0.2s ease
	color primary-color
	
	&:hover
		background rgba(secondary-color, 0.1)
	
	&.selected
		background secondary-color
		color white-color

.selectr-selected
	border 2px solid rgba(secondary-color, 0.2)
	border-radius 12px
	padding 1.2rem 1.6rem
	background-color white-color
	min-height 4.8rem
	display flex
	align-items flex-star
	flex-wrap wrap
	gap 0.4rem
	transition all 0.2s ease
	
	&:hover
		border-color secondary-color
		box-shadow 0 4px 12px rgba(secondary-color, 0.15)
	
	&:focus
		outline none
		border-color secondary-color
		box-shadow 0 0 0 3px rgba(secondary-color, 0.1)

	&:before
		top 1.2rem
		right 1.2rem
		transform none
		border-width 6px 6px 0
		border-color secondary-color transparent transparen
		transition transform 0.2s ease

.selectr-tag
	background linear-gradient(135deg, secondary-color 0%, tertiary-color 100%)
	color white-color
	border-radius 8px
	margin 0
	padding 0.4rem 0.8rem
	font-size 1.3rem
	font-weight 500
	display inline-flex
	align-items center
	gap 0.4rem
	box-shadow 0 2px 4px rgba(secondary-color, 0.2)
	flex-shrink 0
	
	&:hover
		transform translateY(-1px)
		box-shadow 0 4px 8px rgba(secondary-color, 0.3)

.selectr-tag-remove
	color white-color
	font-weight bold
	cursor pointer
	margin-left 0.4rem
	opacity 0.8
	transition opacity 0.2s ease
	
	&:hover
		opacity 1
